<% if @content_errors && display_content_errors? %>
  <div class="govuk-!-width-full">
    <div class="govuk-error-summary govuk-!-margin-5" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
      <h2 class="govuk-error-summary__title" id="error-summary-title">
        <%= @content_errors_title || 'There is a problem with the content of this page' %>

      </h2>
      <div class="govuk-error-summary__body">
        <ul class="govuk-list govuk-error-summary__list">
          <%= safe_join(@content_errors.map { |e| tag.li(tag.a(e.message, href: e.anchor)) }) %>
        </ul>
      </div>
    </div>
  </div>
<% end %>
