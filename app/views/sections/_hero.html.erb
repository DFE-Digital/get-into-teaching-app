<% if image === false %>
    
<% else %>
    <% if deep %> 
        <div class="hero hero--deep" style="background-image: url('<%= hero_image_path image %>')">
            <div class="hero__banner">
                <div class="hero__banner__text">
                    <h1><%= header %></h1>
                    <p><%= subtitle %></p>
                </div>
            </div>
        </div>
    <% else %>
        <% if defined?(mobileimage) && mobileimage %>
            <div class="hero">
                <picture class="hero__image">
                    <source 
                        srcset="
                        <%= hero_image_path mobileimage %>
                        "
                        media="(max-width: 799px)"
                    />
                    <img 
                        src="<%= hero_image_path image %>"
                        alt=" "
                        data-object-fit
                    />
                </picture>
                <div class="hero__banner">
                    <div class="hero__banner__text">
                        <h1><%= header %></h1>
                    </div>
                </div>
            </div>
        <% else %>
            <div class="hero" style="background-image: url('<%= hero_image_path image %>')">
                <div class="hero__banner">
                    <div class="hero__banner__text">
                        <h1><%= header %></h1>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
    <% if mailinglist %>
        <div class="hero__mailing-strip">
            <div class="hero__mailing-strip__text">
                <p>Sign up to receive information via email that could help you make your decision to get into teaching.</p>  
            </div>
            <%= link_to(mailing_list_steps_path, class: "hero__mailing-strip__button") do %>
                <span>Sign up here <i class="visually-hidden">to receive information via email</i></span>
            <% end %>
        </div>
    <% end %>
<% end %>
