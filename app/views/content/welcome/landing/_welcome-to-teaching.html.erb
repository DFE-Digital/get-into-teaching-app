<header class="landing welcome-to-teaching">
  <div class="background yellow"></div>
  <div class="triangle yellow">
    <svg height="100%" width="100%" viewbox="0 0 100 100" preserveAspectRatio="none">
      <polygon points="0,0 100,0 100,100" />
    </svg>
  </div>

  <%= image_pack_tag "media/images/content/hero-images/0014.jpg" %>

  <h1>
    <div class="caption caption-l">
      <span class="purple">
        Hi Simon.
      </span>
    </div>

    <div class="caption caption-m">
      <span class="purple">
        Thanks for signing up.
      </span>
    </div>

    <div class="caption welcome-to-teaching">
      <span class="purple no-wrap">
        Welcome to
      </span>

      <span class="purple"><span class="underline">Teaching</span>.</span>
    </div>
  </h1>

  <div class="arrow-container">
    <%=
    render ArrowComponent.new(
        width: 80,
        height: 200,
        x1: 0.5,
        y1: 0,
        x2: 0.5,
        y2: 1,
        cx: -0.1,
        cy: 0.35,
        arrow_size: 0.065
      )
    %>
  </div>
</header>
