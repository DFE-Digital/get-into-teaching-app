<header class="case-study header blue">
  <div class="background"></div>
  <%= image_pack_tag(
    "media/images/content/welcome-guide/#{subject_specific_story_data[:image]}",
    alt: subject_specific_story_data[:alt]
  ) %>
  <div class="back">
    <%= link_to("/welcome") do %>
      &#8592; Back to welcome
    <% end %>
  </div>

  <h1>
    <div class="caption caption-l">
      <span class="yellow no-wrap">
        My journey
      </span>
    </div>

    <div class="caption caption-l">
      <div class="yellow no-wrap blend">
        into <em>teaching</em>.
      </div>
    </div>

    <div class="caption caption-m">
      <span class="yellow">
        <%= subject_specific_story_data[:name] %>, <%= subject_specific_story_data[:job_title_and_location] %>
      </span>
    </div>
  </h1>

  <div class="triangle blue">
    <svg height="100%" width="100%" viewbox="0 0 100 100" preserveAspectRatio="none">
      <polygon points="0,0 100,0 100,100" />
    </svg>
  </div>
</header>
