          image_paths: [
            "static/images/content/landing/how-to-fund-your-teacher-training-1.jpg",
            "static/images/content/landing/train-to-teach.jpg",
            "static/images/content/landing/train-to-teach-if-you-have-a-degree-1.jpg",
