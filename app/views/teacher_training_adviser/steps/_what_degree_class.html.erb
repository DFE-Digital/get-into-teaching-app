<%
  label_text = if f.object.degree_in_progress?
                 t('helpers.label.teacher_training_adviser_steps_what_degree_class.uk_degree_grade_id.studying')
               else
                 t('helpers.label.teacher_training_adviser_steps_what_degree_class.uk_degree_grade_id.graduated')
               end
  hint_text = if f.object.degree_in_progress?
                t('helpers.hint.teacher_training_adviser_steps_what_degree_class.uk_degree_grade_id.studying')
              else
                t('helpers.hint.teacher_training_adviser_steps_what_degree_class.uk_degree_grade_id.graduated')
              end
%>

<%= f.govuk_collection_radio_buttons :uk_degree_grade_id,
  f.object.class.options,
  :id,
   ->(option) { format_option_value(option, "teacher_training_adviser_steps.what_degree_class.uk_degree_grade_id") },
   ->(option) { format_option_hint(option, "teacher_training_adviser_steps.what_degree_class.uk_degree_grade_id") },
  legend: { text: label_text, tag: "h1", size: "m" },
  hint: { text: hint_text }
%>
