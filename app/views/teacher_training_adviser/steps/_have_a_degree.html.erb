<%= f.govuk_collection_radio_buttons :degree_option,
                                     TeacherTrainingAdviser::Steps::HaveADegree::DEGREE_OPTIONS,
                                     :to_s,
                                     ->(option) { t("helpers.answer.teacher_training_adviser_steps.have_a_degree.degree_options.#{option}") },
                                     lambda { |option|
                                       if option == TeacherTrainingAdviser::Steps::HaveADegree::DEGREE_OPTION_STUDYING
                                         content_tag(:div, class: "field__hidden_subfield") do
                                           f.govuk_text_field(
                                             :graduation_year,
                                             maxlength: 4,
                                             label: { text: "Which year will you graduate?" },
                                             hint: { text: "For example, #{Date.current.year + 2}"}
                                           )
                                         end
                                       end
                                     },
                                     legend: { tag: 'h1', text: t("helpers.legend.teacher_training_adviser_steps_have_a_degree.degree_status", **Value.data) } %>
