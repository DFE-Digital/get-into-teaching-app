<%= link_to event_path(id: event.readable_id), class: "event-link" do %>
    <%= render "components/eventboxshort",
        :title => event.name,
        :datetime => format_event_date(event),
        :type => event.type_id,
        :online => event.building.nil?,
        :location => event.building&.address_city
    %>
<% end %>