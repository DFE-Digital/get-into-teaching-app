<div class="events">
  <div class="events__filter">
    <h2>Filters</h2>

    <%= govuk_form_for(@event_search, method: :get, url: "/events") do |f| %>

      <div class="events__filter--group">
        <%= f.govuk_text_field(:postcode, label: { text: "Location" }, form_group: { classes: 'reduce-bottom-margin' }) %>
        <a href="#">Use my current location</a>
      </div>

      <div class="events__filter--group">
        <%= f.govuk_check_boxes_fieldset(:setting, legend: nil) do %>
          <%= f.govuk_check_box :setting, "online", label: { text: "Online" } %>
          <%= f.govuk_check_box :setting, "in_person", label: { text: "In person" } %>
        <% end %>
      </div>

      <div class="events__filter--group">
        <%= f.govuk_check_boxes_fieldset(:type, legend: { text: "Event type", tag: nil }) do %>
          <%= f.govuk_check_box :type, "train_to_teach", label: { text: "Train to teach" } %>
          <%= f.govuk_check_box :type, "online_forum", label: { text: "Online forum" } %>
          <%= f.govuk_check_box :type, "school_and_university", label: { text: "School and university" } %>
        <% end %>
      </div>
    <% end %>
  </div>

  <div class="events__lists">
    <div class="promoted">
      <h2>Upcoming train to teach events</h2>

      <ol class="events__sublist">
        <% @events.each do |event| %>
          <%= render(Events::CardComponent.new(event)) %>
        <% end %>
      </ol>
    </div>

    <ol class="events__sublist">
    </ol>
  </div>
</div>
