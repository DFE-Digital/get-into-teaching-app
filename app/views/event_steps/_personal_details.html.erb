<section class="event-reg-main">
    <div class="event-reg-main__content container-1000">
        <div class="event-reg-main__content__left">
            <h1>Sign up for this event:</h1>
            <h2>Train to Teach Coventry online event</h2>
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
                eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad
                minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip
                ex ea commodo consequat.
            </p>

            <%= govuk_form_for current_step, url: step_path do |f| %>
              <%= f.govuk_error_summary %>

              <%= f.govuk_email_field :email_address %>
              <%= f.govuk_text_field :first_name %>
              <%= f.govuk_text_field :last_name %>

              <%= f.button class: "call-to-action-button" do %>
                Next Step <%= fas "chevron-right" %>
              <% end %>
            <% end %>
        </div>

        <div class="event-reg-main__content__right">
            <%= render "components/eventboxshort",
                :title => "Train to teach Coventry Online event",
                :datetime => "11 May 2020 at 17:00 - 18:30",
                :schooloruni => false,
                :description => "This online event specifically for anybody looking to train to teach in Coventry will give you the opportunity to ask our experts questions about teacher training.",
                :traintoteach => false,
                :online => true,
                :location => "Coventry"
            %>
        </div>
        </div>
    </div>
</section>

<%= render "sections/talk-to-us" %>
