<% @hide_page_helpful_question = true %>

<%= tag.section data: { "sub-channel-id": session.dig('events', params['event_id'], 'sub_channel_id') } do %>
  <h1 class="heading-l heading--box-green">Sign up complete</h1>

  <%= tag.h2("You are signed up for #{@event.name}.", class: "heading-m") %>

  <p><%= format_event_date @event, stacked: false %></p>

  <%- if params[:subscribed].to_s == "1" -%>
    <h3>You've also signed up for email updates</h3>

    <p>You're ready to receive email updates to help you get into teaching.</p>
  <%- end -%>

  <h2 class="heading-m">What happens next</h2>
  <p>
    You will receive a confirmation email with details of the event. If there
    is an issue with the event we will contact you via phone.
  </p>

  <%= render SingleQuestionSurveyComponent.new(
    question: 'How did you hear about this event?',
    hint: 'Select one of the following options',
    answers: [
      'Get Into Teaching website',
      'Get Into Teaching email',
      'Get Into Teaching online event',
      'SMS',
      'Social media',
      'Local teaching provider',
      'University',
      'Search engine',
      'Other'
    ]
  ) %>
<% end %>

<div class="blocks">
  <%= render Content::GenericBlockComponent.new(
    title: "Life as a teacher",
    icon_image: "static/images/icon-school-black.svg",
    icon_size: "40x30",
    classes: "blocks__directory"
  ) do %>
    <ul>
      <li><a href="/blog">Read teachers' stories</a></li>
      <li><a href="https://schoolexperience.education.gov.uk/">Experience a real school</a></li>
      <li><a href="/life-as-a-teacher/pay-and-benefits/teacher-pay">Teachers' salaries</a></li>
    </ul>
  <% end %>

  <%= render Content::GenericBlockComponent.new(
    title: "Your next steps",
    icon_image: "static/images/icon-doc-black.svg",
    icon_size: "40x35",
    classes: "blocks__directory"
  ) do %>
    <ul>
      <li><a href="/steps-to-become-a-teacher">How to become a teacher</a></li>
      <li><a href="/train-to-be-a-teacher">Explore ways to train</a></li>
      <li><a href="/funding-and-support">Find your funding options</a></li>
    </ul>
  <% end %>

  <%= render Content::GenericBlockComponent.new(
    title: "Sign up to get a teacher training adviser",
    icon_image: "static/images/icon-git-black.svg",
    icon_size: "33x33",
    classes: "blocks__directory"
  ) do %>
    <p class="block__text">
      If you're ready to get into teaching, you can get free, one-to-one, support from a dedicated, experienced teaching professional to guide you through the process.
    </p>

    <%= link_to "Get an adviser", "/teacher-training-adviser/sign_up/identity", class: "button button--white button--unpadded" %>
  <% end %>
</div>
