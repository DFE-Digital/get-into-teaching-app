<div class="event-resultboxshort">
    <div class="event-resultboxshort__header">
        <h1><%= datetime %></h1>
    </div>
    <div class="<%=  traintoteach ? 'event-resultboxshort__greenstripe' : 'event-resultboxshort__bluestripe' %>"></div>
    <div class="event-resultboxshort__content">
        <div style="<%= 'display:none' unless traintoteach %>"><h1><div class="event-resultboxshort__content__icon icon-train-to-teach " ></div> Train to teach event</h1></div>
        <div style="<%= 'display:none' unless schooloruni %>"><h1><div class='event-resultbox__content__icon icon-school'></div> School or uni event</h1></div>
        <div style="<%= 'display:none' unless online %>"><h1><div class='event-resultboxshort__content__icon icon-online'></div> Online event</h1></div>
        <div style="<%= 'display:none' unless (defined? location)%>"><h1><div class='event-resultboxshort__content__icon icon-pin'></div> <%= location if defined?(location) %></h1></div>
    </div>
</div>