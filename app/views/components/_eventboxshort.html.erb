<div class="event-resultboxshort">
    <div class="event-resultboxshort__header">
        <h3><%= datetime %></h3>
    </div>
    <div class="<%=  traintoteach ? 'event-resultboxshort__greenstripe' : 'event-resultboxshort__bluestripe' %>"></div>
    <div class="event-resultboxshort__content">
        <div style="<%= 'display:none' unless traintoteach %>"><h3><div class="event-resultboxshort__content__icon icon-train-to-teach " ></div> Train to teach event</h3></div>
        <div style="<%= 'display:none' unless schooloruni %>"><h3><div class='event-resultbox__content__icon icon-school'></div> School or uni event</h3></div>
        <div style="<%= 'display:none' unless online %>"><h3><div class='event-resultboxshort__content__icon icon-online'></div> Online event</h3></div>
        <div style="<%= 'display:none' unless (defined? location)%>"><h3><div class='event-resultboxshort__content__icon icon-pin'></div> <%= location if defined?(location) %></h3></div>
    </div>
</div>