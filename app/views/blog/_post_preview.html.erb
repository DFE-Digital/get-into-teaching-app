<li>
  <article class="blog">
    <header>
      <h2><%= link_to fm[:title], path %></h2>
      <%= tag.div(format_blog_date(fm[:date]), class: 'author-date') %>
    </header>
    <% if fm[:images].present? %>
      <p><%= image_pack_tag(fm[:images]&.values&.first) %></p>
    <% end %>
    <p><%= fm[:description] %></p>

    <%= link_to "Read more", path %>
  </article>
</li>
