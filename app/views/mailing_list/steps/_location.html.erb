<div data-controller="last-step" data-last-step-complete="Complete sign up<span></span>" data-last-step-continue="Next step<span></span>">
  <div data-action="click->last-step#updateSubmit">
    <%= f.govuk_radio_buttons_fieldset :location,
                                       legend: { tag: "h1", text: t('helpers.label.mailing_list_steps_location.location', **Value.data) },
                                       hint: { text: t('helpers.hint.mailing_list_steps_location.location', **Value.data) },
                                       inline: false do %>
      <% f.object.locations.each do |location| %>
        <% inside_uk = location.id == MailingList::Steps::Location::INSIDE_THE_UK %>
        <%= tag.div class: "govuk-!-margin-bottom-2", data: {"last-step-target": inside_uk ? "next-step" : "complete" } do %>
          <%= f.govuk_radio_button :location,
                                   location.id,
                                   label: { text: format_option_value(location, "mailing_list_steps.location.location") },
                                   hint: { text: format_option_hint(location, "mailing_list_steps.location.location") },
                                   link_errors: inside_uk,
                                   data: {"last-step-target": inside_uk ? "next-step" : "complete" }
          %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
