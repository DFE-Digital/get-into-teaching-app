<!doctype html>
<html lang="en" class="govuk-template">
  <%= render "sections/head" %>
  <%= analytics_body_tag class: "govuk-template__body govuk-body", data: { controller: "video link scroll", "link-target": "content" }, id: "body" do %>
    <%= render HeaderComponent.new(breadcrumbs: true) do |c| %>
      <%= c.hero(@front_matter) %>
    <% end %>

    <main role="main" id="main-content">
      <section class="container">
        <% unless @fullwidth %>
          <aside></aside>
        <% end %>
        <article class="markdown <%= " fullwidth" if @fullwidth %>">
          <%= yield %>
        </article>
        <section class="feature">
          <%= yield :feature %>
        </section>
      </section>
    </main>

    <%= render "sections/footer" %>
    <%= render "sections/cookie-acceptance" %>
    <%= render "components/videoplayer" %>
  <% end %>
</html>
