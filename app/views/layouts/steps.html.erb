<!doctype html>
<html lang="en" class="govuk-template">
    <%= render "sections/head" %>
    <%= body_tag do %>
      <%= render "sections/govuk_javascript" %>
      <%= render HeaderComponent.new(@front_matter) %>

      <%= main_tag do %>
        <%= render Content::HeroComponent.new(@front_matter) %>

        <section class="main-section container">
          <%= render(partial: "sections/content_errors") %>

          <%= tag.article(class: article_classes(@front_matter)) do %>
            <%= yield %>
          <% end %>
        </section>

        <section class="row">
          <div class="col col-full-content">
            <%= render CallsToAction::AdviserComponent.new(
              text: "An adviser with years of teaching experience can help you with your teacher training application. Chat by phone, text or email, as little or as often as you need.",
            ) %>
          </div>
        </section>

      <% end %>

      <%= render FooterComponent.new %>
    <% end %>
</html>
