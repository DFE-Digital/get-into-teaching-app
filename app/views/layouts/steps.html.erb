<!doctype html>
<html lang="en" class="govuk-template">
    <%= render "sections/head" %>
    <%= body_tag do %>
      <%= render HeaderComponent.new(breadcrumbs: true) %>

      <%= main_tag do %>
        <%= render Content::HeroComponent.new(@front_matter) %>

        <section class="main-section container">
          <%= render(partial: "sections/content_errors") %>

          <%= tag.article(class: article_classes(@front_matter)) do %>
            <%= yield %>
          <% end %>
        </section>

        <%= render(CallsToAction::Promo::PromoComponent.new) do |promo| %>
           <% promo.left_section(classes: %w[tta-background]) %>
          <% promo.right_section(heading: "Get free one-to-one support") do %>
            <p>An adviser with years of teaching experience can help you understand what support you could get during your training. Chat through phone, text or email, as little or as often as you need.</p>

      <%= link_to("Find out more about advisers", "/teacher-training-advisers", class: "button") %>
          <% end %>
        <% end %>
      <% end %>

      <%= render FooterComponent.new %>
    <% end %>
</html>
