<!doctype html>
<html lang="en" class="govuk-template">
    <%= render "sections/head" %>
    <%= body_tag do %>
      <%= render HeaderComponent.new(breadcrumbs: true) %>

      <%= main_tag do %>
        <%= render Content::HeroComponent.new(@front_matter) %>

        <section class="main-section container">
          <%= render(partial: "sections/content_errors") %>

          <%= tag.article(class: article_classes(@front_matter)) do %>
            <%= yield %>
          <% end %>
        </section>

        <%= render Content::PurpleBoxComponent.new(
          heading: "Get free one-to-one support",
          text: "An adviser with years of teaching experience can help you with your application. Chat through phone, text, email as little or often as you need.",
          cta: {
            text: "Find out more about advisers",
            path: "/tta-service",
          }
        ) %>

      <% end %>

      <%= render FooterComponent.new %>
    <% end %>
</html>
