<!doctype html>
<html lang="en" class="govuk-template">
  <% content_for :head do %>
    <%= csrf_meta_tags %>
  <% end %>

  <%= render "sections/head" %>
  <%= body_tag do %>
    <%= render(partial: "sections/gtm_fallback") %>

    <%= render HeaderComponent.new %>

    <%= main_tag do %>
      <div class="main-section registration-with-side-images">
        <section class="signup-container">
          <%= image_pack_tag 'content/mailing-list-signup/left.jpg', class: 'left-img hide-on-mobile hide-on-tablet', alt: "" %>
          <div class="signup-form">
            <%= image_pack_tag 'content/mailing-list-signup/mobile.jpg', class: 'hide-on-desktop', alt: "" %>
            <%= yield %>
          </div>
          <%= image_pack_tag 'content/mailing-list-signup/right.jpg', class: 'right-img hide-on-mobile hide-on-tablet', alt: "" %>
        </section>
      </div>
    <% end %>

    <%= render FooterComponent.new(talk_to_us: false, feedback: false, mailing_list: false) %>
    <%= javascript_pack_tag 'govuk/frontend', 'data-turbolinks-track': 'reload', async: true %>
  <% end %>
</html>
