<!doctype html>
<html lang="en" class="govuk-template">
    <%= render "sections/head" %>
    <%= analytics_body_tag class: "govuk-template__body govuk-body", data: { controller: "video link", target: "link.content" }, id: "body" do %>
      <%= render "sections/header" %>
      <main class="content container-1000" role="main" id="main-content">
        <% if @front_matter.dig("build_layout_from_frontmatter") %>

          <div class="content-wrapper">
            <div class="content__left">
              <article class="story">
                <%= link_to("Career changers' stories", @front_matter["backlink"], class: "backlink backlink--top") %>

                <%= tag.h1(@front_matter["title"]) %>

                <header class="story__header">
                  <%= image_tag(@front_matter["image"], width: 200, height: 200) %>
                  <div class="story__header__label">
                    <%= story_heading(@front_matter) %>
                  </div>
                </header>

                <% if youtube_url = @front_matter.dig("story", "video") %>
                  <%= youtube(youtube_url) %>
                <% end %>

                <%= yield %>
              </article>
            </div>
          </div>

          <% if @front_matter.dig("more_stories").present? %>
            <h2 class="more-stories_header strapline">More stories</h2>

            <div class="more-stories">
              <div class="more-stories__thumbs">
                <% @front_matter.dig("more_stories").each do |story| %>

                  <div class="more-stories__thumbs__thumb">
                    <%= link_to(story["link"]) do %>
                      <%= more_stories_thumbnail(story["image"]) %>
                    <% end %>
                    <div class="more-stories__thumbs__thumb__content">
                      <p>School experience helped me decide to switch</p>

                      <%= link_to(story["link"], class: "git-link") do %>
                        Read <%= story["name"] %>â€™s story <%= fas_icon("chevron-right") %>
                      <% end %>
                    </div>
                  </div>

                <% end %>
              </div>
            </div>
          <% end %>

        <% else %>
          <%= yield %>
        <% end %>
      </main>
      <%= render "sections/footer" %>
      <%= render "components/videoplayer" %>
      <%= render "sections/cookie-acceptance" %>
    <% end %>
</html>

