<!doctype html>
<html lang="en" class="govuk-template">
    <%= render "sections/head" %>
    <%= analytics_body_tag class: "govuk-template__body govuk-body", data: { controller: "video" }, id: "body" do %>
        <div class="container">
            <%= render "sections/header" %>
            <section class="content container-1000" role="main" id="main-content">
                <div class="content-wrapper">
                    <div class="content__right">
                    </div>
                    <div class="content__left">
                        <div class="stories">
                            <h1><%= @front_matter["title"] %></h1>
                            <div class="story-header">
                                <div class="story-header__thumb" style="background-image:url(<%= @front_matter["teacher_image"] %>)"></div>
                                <div class="story-header__label">
                                    <h2><%= @front_matter["teacher_name"] %>, <br/><%= @front_matter["teacher_jobtitle"] %></h2>
                                    
                                </div>
                            </div>
                            <p class="prominent">
                                <%= @front_matter["tagline"] %>
                            </p>
                            <p>
                                <%= @front_matter["opener"] %>
                            </p>
                            <div>
                                <div class="quote-block">
                                    <span class="icon-quote"></span>
                                    <strong class="quote-block__content"><%= @front_matter["quote"] %><span class="icon-quote quote-close"></span></strong>
                                </div>
                                <p>
                                    <%= @front_matter["quote_parralel_paragraph"] %>
                                </p>
                            </div>
                            <%= yield %>

                        </div>
                    </div>
                </div>

                <div class="more-stories">
                    <h2 class="more-stories_header strapline">More stories</h2>
                    <div class="more-stories__thumbs">
                        <% Array.wrap(@front_matter["more_stories"]).slice(0, 3).each do |story| %>
                            <div class="more-stories__thumbs__thumb">
                                <a href="<%= story["url"] %>">
                                    <div class="more-stories__thumbs__thumb__img" style="background-image:url('<%= story["image"] %>')"></div>
                                </a>
                                <div class="more-stories__thumbs__thumb__content">
                                    <p><%= story[0]["title"] %></p>
                                    <%= link_to story["url"], class: "git-link" do %>
                                      <%= story["cta"] %>
                                      <i class="fas fa-chevron-right"></i>
                                    <% end %>
                                </div>
                            </div>
                        <% end %>
                    </div>
                </div>
            </section>
            <%= render "sections/footer" %>     
        </div>
        <%= render "components/videoplayer" %>
        <%= render "sections/cookie-acceptance" %>
        <%= render "sections/feedback-prompt" %>
    <% end %>
</html>

