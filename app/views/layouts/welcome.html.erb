<!doctype html>
<html lang="en" class="govuk-template">
  <%= render "sections/head" %>
  <%= body_tag do %>
    <%= render(partial: "sections/gtm_fallback") %>
    <%= render(partial: "sections/content_errors") %>

    <%= render HeaderComponent.new %>

    <main class="welcome-guide main-body" id="main-content" role="main">
      <%= yield %>

      <% @front_matter["content"]&.each do |partial| %>
        <%= render(partial) %>
      <% end %>
    </main>

    <%= render FooterComponent.new(talk_to_us: true, mailing_list: false, feedback: false) %>
  <% end %>
</html>
