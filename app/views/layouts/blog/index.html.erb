<!doctype html>
<html lang="en" class="govuk-template">
  <%= render "sections/head" %>
  <%= analytics_body_tag class: "govuk-template__body govuk-body", data: { controller: "video link scroll", "link-target": "content" }, id: "body" do %>

    <%= render HeaderComponent.new %>

    <main role="main" id="main-content">
      <section class="container blog">
        <div class="popular-blog-tags container ">
          <h2>Popular blog tags</h2>
          <ol class="popular-blog-tags__list">
            <% most_popular_tags.each do |popular_tag| %>
              <li><%= popular_tag %></li>
            <% end %>
          </ol>
        </div>

        <div class="text-content longform">
          <%= yield %>
        </div>
      </section>
    </main>

    <%= render "sections/mailing-list-bar" %>
    <%= render "sections/footer" %>
    <%= render "components/videoplayer" %>
    <%= render "sections/cookie-acceptance" %>
    <%= render "components/analytics" %>
  <% end %>
</html>
