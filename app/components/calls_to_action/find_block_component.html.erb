<%= tag.div(class: "image-block promos") do %>
  <%= image_pack_tag("images/#{image}", alt: "") %>

  <%= tag.h2(class: "heading--overlap heading--highlight-#{title_color} heading--margin-top-0 heading-xl") do %>
    <%= tag.span(@title) %>
  <% end %>

  <div class="promos">
    <p><%= text %></p>
    <%= link_to @link_text, @link_target, class: "button", role: "button", data: { "promo-type": "find" } if @link_text.present? && @link_target.present? %>
  </div>
<% end %>
