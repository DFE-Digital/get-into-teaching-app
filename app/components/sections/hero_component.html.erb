<%= tag.header(class: classes) do %>
  <%= responsive_image %>
  <div class="hero__title">
    <h1><%= tag.span(title) %></h1>
  </div>
  <% if show_subtitle? %>
    <div class="hero__subtitle">
      <%= tag.div(subtitle) %>
    </div>
  <% end %>

  <% if content.present? %>
    <div class="hero__content">
      <%= content %>
    </div>
  <% end %>
<% end %>
