<div id="event_survey" data-controller="feedback">
  <h2 class="heading-m"><%= question %></h2>
  <div class="govuk-hint" data-feedback-target="text"><%= hint %></div>
  <p>
    <% answers.each do |answer| %>
      <button type="button" data-feedback-target="link" data-action="feedback#answer" class="survey-button"><%= answer %></button>
    <% end %>
  </p>
</div>
