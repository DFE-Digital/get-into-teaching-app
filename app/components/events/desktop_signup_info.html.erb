<div class="event-box signup-info desktop">
  <header class="event-box__header">

    <h2>
      <span class="caption">Event details:</span>
      <%= title %>
    </h2>
  </header>

  <div class="event-box__datetime">
    <%= datetime %>
  </div>

  <%= divider %>

  <footer class="event-box__footer">
    <% if show_category? %>
      <div class="event-box__footer__item">
        <div class="event-box__footer__icon-wrapper">
          <%= event_type_icon %>
        </div>
        <div class="event-box__footer__meta">
          <%= type_name %>
        </div>
      </div>
    <% end %>

    <% if online? %>
      <div class="event-box__footer__item">
        <%= online_icon %>
        <div class="event-box__footer__meta">
          <%= online_text %>
        </div>
      </div>
    <% end %>
  </footer>
</div>
