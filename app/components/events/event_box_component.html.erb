<div class="event-box">
    <div class="event-box__header">
        <h2><%= heading %></h2>
    </div>

    <% unless condensed? %>
      <div class="event-box__datetime">
        <%= datetime %>
      </div>
    <% end %>

    <%= divider %>

    <div class="event-box__content">
      <% unless condensed? %>
        <p><%= description %></p>
      <% end %>

      <% if type && type != GetIntoTeachingApiClient::Constants::EVENT_TYPES["Online Event"] %>
        <h5>
          <%= event_type_icon %>
          <%= type_name %>
        </h5>
      <% end %>

      <% if online? %>
        <h5>
          <%= online_icon %>
          Online Event
        </h5>
      <% end %>

      <% if location.present? %>
        <h5 class="event-box__content__location">
          <%= location_icon %>
          <%= formatted_location %>
        </h5>
      <% end %>
    </div>
</div>
