<%= tag.li(class: ["event", train_to_teach_class])  do %>
  <div class="event__info">
    <div class="event__info--date">
      <%= date %>
    </div>

    <div class="event__info--time">
      <%= time_and_duration %>
    </div>

    <div class="event__info--name">
      <%= title %>
    </div>

    <div class="event__info--location">
      <%= location %>
    </div>

    <div class="event__info--setting">
      <%= setting %>
    </div>
  </div>

  <div class="event__meta">
    <%= image_pack_tag "media/images/content/welcome-guide/jack-rowing-crop-face.jpg" %>
  </div>
<% end %>
