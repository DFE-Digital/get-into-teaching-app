<%= tag.blockquote(class: quote_class) do %>
  <p><%= text_sans_last_word %> <span><%= text_last_word %></span></p>
  <% if show_footer? %>
    <%= tag.div(class: "footer") do %>
      <div class="author">
        <div>
          <% if name.present? %>
            <cite class="name"><%= helpers.safe_html_format(name) %></cite>
          <% end %>
          <% if job_title.present? %>
            <cite class="job-title"><%= job_title %></cite>
          <% end %>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
