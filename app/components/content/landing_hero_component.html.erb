<%= tag.header(class: "#{classes.join(' ')} #{title_paragraph ? 'deeper' : 'landing-hero'}") do %>

  <%= header_image %>

  <%= tag.div(class: header_image ? "content" : "content wide") do %>

    <%= tag.h1(class: "title") do %>
      <% Array.wrap(title).each do |p| %>
        <%= tag.span(p) %>
      <% end %>
    <% end %>
    <% if show_title_paragraph? %>
    <%= helpers.safe_format(title_paragraph) %>
    <% end %>
  <% end %>
<% end %>
