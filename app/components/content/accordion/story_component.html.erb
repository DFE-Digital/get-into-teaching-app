<%= tag.div(class: %w[call-to-action call-to-action--story]) do %>
  <div class="call-to-action__photo">
    <%= image_tag(image) %>
  </div>

  <div class="call-to-action__contents">
    <%= tag.h3(heading, class: "call-to-action__contents__heading") %>
    <%= tag.p(text, class: "call-to-action__contents__story") %>
    <%= button %>
  </div>
<% end %>
