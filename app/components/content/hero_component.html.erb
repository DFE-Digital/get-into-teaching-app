<%= tag.div(class: classes) do %>
  <%= picture %>
  <div class="hero__title">
    <h1 class="heading--box-padded heading--box-padding-l heading--box-<%= @title_bg_color %>"><%= title %></h1>
  </div>
  <% if show_subtitle? %>
    <div class="hero__subtitle">
      <%= tag.div(subtitle, class: "hero__subtitle__text") %>

      <% if show_subtitle_button? %>
        <%= link_to(@subtitle_button, @subtitle_link, class: "hero__subtitle__button button") %>
      <% end %>
    </div>
  <% end %>

  <% if content.present? %>
    <div class="hero__content">
      <%= content %>
    </div>
  <% end %>
  <div class="hero__paragraph">
    Nobody knows teaching like we do. Whether you're just thinking about it or ready to apply, we offer <strong>free advice and support</strong> to decide if <strong>teaching in a primary or secondary school</strong> in England is right for you.
  </div>
<% end %>
